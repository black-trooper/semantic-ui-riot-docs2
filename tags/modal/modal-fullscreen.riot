<modal-fullscreen>
  <section-header title="Full Screen">A modal can use the entire size of the screen</section-header>
  <section>
    <div class="ui segment secondary top attached example">
      Example
      <i class="icon code" onclick="{ toggleExample }"></i>
    </div>
    <div class="ui segment bottom attached">
      <su-modal modal="{ modal }" class="fullscreen" show="{ state.show }" onhide="{ onHide }">
        Full screen modal
      </su-modal>
      <button class="ui button" onclick="{ showModal }">Show full screen modal</button>
    </div>
    <div class="ui segment bottom attached inverted transition hidden">
      <pre class="language-markup"><code>
          <su-modal modal="{ modal }" class="fullscreen" show="{ state.show }" onhide="{ onHide }">
            Full screen modal
          </su-modal>
          <button class="ui button" onclick="{ showModal }">Show full screen modal</button>
  
          <script>
            export default {
              modal: {
                header: 'Select a Photo',
                buttons: [{
                  text: 'Ok',
                  type: 'primary',
                  icon: 'checkmark'
                }, {
                  text: 'Cancel'
                }]
              },
              state: {
                show: false
              },

              showModal() {
                this.update({ show: true })
              },
              onHide() {
                this.update({ show: false })
              }
            }
          </script>
        </code></pre>
    </div>
  </section>

  <script>
    export default {
      modal: {
        header: 'Select a Photo',
        buttons: [{
          text: 'Ok',
          type: 'primary',
          icon: 'checkmark'
        }, {
          text: 'Cancel'
        }]
      },
      state: {
        show: false
      },

      showModal() {
        this.update({ show: true })
      },
      onHide() {
        this.update({ show: false })
      }
    }
  </script>
</modal-fullscreen>